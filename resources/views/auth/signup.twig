{% extends 'templates/app.twig' %}

{% block title %}Signup page{% endblock %}

{% block nav %} {% include 'templates/partials/navigation.twig' %} {% endblock %}

{% block content %}

    <div class="uk-container uk-align-center uk-margin-top">

        <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">

            <fieldset class="uk-fieldset">
                <legend class="uk-legend">Załóż darmowe konto</legend>

                <div class="uk-margin">
                    <label for="name">Imię</label>
                    <input class="uk-input {{ errors.name ? ' uk-form-danger' : '' }}" name="name" type="text" id="name" placeholder="Podaj swoje imię" {% if old.email %} value="{{ old.name }}  {% endif %}">
                    {% if errors.name %}
                        <span class="uk-text-danger">{{ errors.name | first }}</span>
                    {% endif %}
                </div>

                <div class="uk-margin">
                    <label for="email">Email</label>
                    <input class="uk-input {{ errors.email ? ' uk-form-danger' : '' }}" name="email" type="email" id="email" placeholder="Podaj swój email" {% if old.email %} value="{{ old.email }} {% endif %}">
                    {% if errors.email %}
                        <span class="uk-text-danger">{{ errors.email | first }}</span>
                    {% endif %}
                </div>

                <div class="uk-margin">
                    <label for="password">Hasło</label>
                    <input class="uk-input {{ errors.password ? ' uk-form-danger' : '' }}" name="password" type="password" id="password" placeholder="Podaj hasło">
                    {% if errors.password %}
                        <span class="uk-text-danger">{{ errors.password | first }}</span>
                    {% endif %}
                </div>

                <div class="uk-margin">
                    <label for="password_confirm">Potwierdź hasło</label>
                    <input class="uk-input" name="password_confirm" type="password" id="password_confirm" placeholder="Potwierdź hasło">
                    {% if errors.password_confirm %}
                        <span class="uk-text-danger">{{ errors.password_confirm | first }}</span>
                    {% endif %}
                </div>

                <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
                    <label><input class="uk-checkbox" type="checkbox" name="regulations" id="regulations"> Akceptuję <a href="{{ path_for('regulations') }}">regulamin</a></label>
                    {% if errors.regulations %}
                        <span class="uk-text-danger">{{ errors.regulations | first }}</span>
                    {% endif %}
                </div>

                <div class="uk-margin">
                    <button class="uk-button uk-button-primary" type="submit" id="password_confirm">Utwórz konto</button>
                </div>

            </fieldset>

        </form>

        <div class="uk-card uk-card-small uk-card-body">
            <p>Posiadasz już konto? <a href="{{ path_for('auth.signin') }}">Zaloguj się</a></p>
        </div>

    </div>

{% endblock %}